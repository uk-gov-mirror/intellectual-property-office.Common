<body class="mainstream full-width">
    <script type="text/javascript">document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>

    <div id="skiplink-container">
      <div>
        <a href="#content" class="skiplink">Skip to main content</a>
      </div>
    </div>

    <header role="banner" id="global-header">
        <div class="header-wrapper">
            <div class="header-global">
                <div class="header-logo">
                    <a href="https://www.gov.uk/" title="Go to the GOV.UK homepage" id="logo" class="content">
                        <img src="/assets/template/images/gov.uk_logotype_crown.png"  width="35" height="31" alt=""> GOV.UK
                    </a>
                </div>
                <div class="headerSection">
                    @RenderSection("HeaderSection", false)
                </div>
            </div>
        </div>
    </header>
    <!--end header-->

    <div id="content" role="main" class="group calculator calculator-page">
        
        @if (ViewBag.ServiceWarningType == ServiceWarningType.Alpha)
        {
            @Html.Partial("~/Views/Shared/GovUK/_AlphaWarning.cshtml")
        }
        else
        {
            @Html.Partial("~/Views/Shared/GovUK/_BetaWarning.cshtml")
        }
        
        <div id="messages">
            @RenderSection("Messages", false)
        </div>
        <header class="page-header group full-width">
            <div class="full-width">
                <h1>
                    <span>@ViewBag.PageType</span>
                    @ViewBag.PageName
                </h1>
            </div>
        </header>
        
        @RenderBody()

    </div>

    <footer class="group js-footer" id="footer" role="contentinfo">

        <div class="footer-wrapper">

            <div class="footer-meta">
                <div class="footer-meta-inner">
                    <h2 class="visuallyhidden">Support links</h2>
                    <ul>
                        <li><a target="_blank" class="openDialog buttonLink" data-dialog-id="feedbackDialog" data-dialog-title="" href="/feedback/1">Feedback</a></li>
                        <li><a target="_blank" href="/static/p-renew-online-cookies">Cookies</a> <img src="/assets/govuk_frontend_toolkit-master/images/external-links/external-link-black-12x12.png" alt="External link" /></li>
                        <li><a target="_blank" href="/static/p-renew-online-privacy">Privacy</a> <img src="/assets/govuk_frontend_toolkit-master/images/external-links/external-link-black-12x12.png" alt="External link" /></li>
                    </ul>

                    <div class="open-government-licence">
                        <h2><a href="http://www.nationalarchives.gov.uk/doc/open-government-licence/version/2">Open Government Licence</a></h2>
                        <p>All content is available under the <a href="http://www.nationalarchives.gov.uk/doc/open-government-licence/version/2">Open Government Licence v2.0</a>, except where otherwise stated</p>
                    </div>

                </div>

                <div class="copyright">
                    <a href="http://www.nationalarchives.gov.uk/information-management/our-services/crown-copyright.htm">&copy; Crown Copyright</a>
                </div>
            </div>
        </div>
    </footer>

    <!--end footer-->

    <div id="global-app-error" class="app-error hidden"></div>

    <script src="/assets/template/javascripts/govuk-template.js" type="text/javascript"></script>

</body>

</html>
